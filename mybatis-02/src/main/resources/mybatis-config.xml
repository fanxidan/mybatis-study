<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--优先使用db.properties中的username-->
    <properties resource="db.properties"/>

    <!--给实体类起别名-->
    <typeAliases>
        <typeAlias type="com.com.com.kuang.com.com.com.kuang.pojo.User" alias="User"/>
        <package name="com.com.com.kuang.pojo"/>
    </typeAliases>
    <!--通过default里面的值来切换environment-->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <!--每一个mapper.xml都需要在MyBatis核心配置文件中注册-->
    <mappers>
<!--        <mapper resource="com/com.com.kuang/dao/UserMapper1.xml"/>-->
<!--        <mapper class="com.com.com.kuang.dao.UserMapper1"/>-->
        <package name="com.com.com.kuang.dao"/>
    </mappers>
</configuration>